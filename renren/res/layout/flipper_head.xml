<?xml version="1.0" encoding="utf-8"?>
<com.renren.mobile.android.ui.base.BaseFlipperHead xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/flipper_head"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/flipper_head_height"
    android:background="@drawable/v5_0_1_flipper_head_blue_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.renren.mobile.android.ui.base.FlipperHeadButton
        android:id="@id/flipper_head_handle"
        android:layout_width="@dimen/flipper_head_button_width"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:src="@drawable/v5_0_1_flipper_head_flip"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="2.0px"
        android:layout_height="24.0dip"
        android:background="@drawable/v5_0_1_flipper_head_separator" />

    <LinearLayout
        android:id="@id/flipper_head_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@id/flipper_head_title_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="6.0dip"
            android:background="@drawable/v5_0_1_icon_button_background"
            android:clickable="true" >

            <TextView
                android:id="@id/flipper_head_title"
                android:layout_width="wrap_content"
                android:layout_height="24.0dip"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="@dimen/flipper_head_text_size" />

            <ImageView
                android:id="@id/flipper_head_title_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4.0dip"
                android:layout_marginRight="6.0dip"
                android:src="@drawable/v5_0_1_flipper_head_title_corner"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@id/flipper_head_hidden"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:clickable="true" />

        <com.renren.mobile.android.ui.base.FlipperHeadButton
            android:id="@id/flipper_head_camera"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_camera"
            android:visibility="gone" />

        <com.renren.mobile.android.ui.base.FlipperHeadButton
            android:id="@id/flipper_head_status"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_status"
            android:visibility="gone" />

        <com.renren.mobile.android.ui.base.FlipperHeadButton
            android:id="@id/flipper_head_checkin"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_checkin"
            android:visibility="gone" />

        <com.renren.mobile.android.ui.base.FlipperHeadButton
            android:id="@id/flipper_head_action"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/flipper_head_text_size"
            android:visibility="gone" />

        <com.renren.mobile.android.ui.base.FlipperHeadButton
            android:id="@id/flipper_head_action_2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:visibility="gone" />

        <com.renren.mobile.android.ui.base.FlipperHeadButton
            android:id="@id/flipper_head_show_menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_menu"
            android:visibility="gone" />
    </LinearLayout>

</com.renren.mobile.android.ui.base.BaseFlipperHead>